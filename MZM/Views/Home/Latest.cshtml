<script>
    let slideIndex = 0;
    let autoSlide;

    function showSlides(n) {
        let i;
        let slides = document.getElementsByClassName("slides");

        // Reset the slideIndex if it's out of bounds
        if (n >= slides.length) {
            slideIndex = 0;
        } else if (n < 0) {
            slideIndex = slides.length - 1;
        }

        // Hide all slides
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }

        // Show the current slide
        slides[slideIndex].style.display = "block";
    }

    function plusSlides(n) {
        clearTimeout(autoSlide); // Stop the auto slideshow
        slideIndex += n;
        showSlides(slideIndex);
        autoSlide = setTimeout(autoChange, 3000); // Restart the auto slideshow
    }

    function autoChange() {
        slideIndex++;
        showSlides(slideIndex);
        autoSlide = setTimeout(autoChange, 3000); // Set the next change
    }

    // Initialize the slideshow
    showSlides(slideIndex);
    autoSlide = setTimeout(autoChange, 3000); // Start the auto slideshow

</script>

