@model IEnumerable<MZM.Models.Users.Assistant>
@{
    ViewBag.Title = "AssistantIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .card {
        position: relative;
        background-color: ghostwhite;
        width: 200px;
        height: 350px;
        color: black;
        font-weight: 500;
        border-radius: 10px;
        /*border: 2px solid #fe1104;*/
        box-shadow: 2px 2px 8px #0d3050;
        padding: 10px;
        display: flex;
        flex-direction: column;
        text-align: center;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    a {
        text-decoration: none;
        font-size: 22px;
        color: black;
    }

        button:hover, a:hover {
            opacity: 0.7;
        }

    .place {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto auto auto;
        width: 90%
    }

    .col-lg-12 {
        margin-top: 35%;
    }
</style>


<!-- Container Start -->
<!-- Row Start -->
<div class="place">
    <div class="col-lg-12">
        <h2 class="font-weight-bold" style="color:green; text-align:center;">Available Tech Store Assistants</h2><br /><hr /><br />
        @if (Model.Count() == 0)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-warning">
                        <b>Note :</b> No assistant available added at the moment.
                    </div>
                </div>
            </div>
        }

        else
        {
            foreach (var item in Model)
            {
                <div class="card">
                    <img src="data:image/png;base64,@Convert.ToBase64String(item.AssistantImage, 0, item.AssistantImage.Length)" style="width: 180px; height:130px" />
                    <h1>@Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)</h1>
                    <p class="title">Assistant</p>
                    <p> @Html.DisplayFor(modelItem => item.Email)</p>
                    <p><strong>@Html.DisplayFor(modelItem => item.ContactNo)</strong></p>
                </div>
            }

        }

    </div>
</div>
<!-- Row End -->
