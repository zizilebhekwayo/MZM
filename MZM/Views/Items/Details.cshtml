@model MZM.Models.Item
@{
    ViewBag.Title = "Item Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    .image {
        width: 800px;
        height: 300px;
        margin-left: 200px;
        margin-top: 110px;
    }

    .content {
        margin-top: 160px;
        margin-left: 195px;
        font-size: 15px;
    }

        .content p {
            color: black;
            font-size: 15px;
        }
</style>

<section class="about" id="about">
    <h1 class="heading"> <span>product</span> details </h1>

    <div class="row">

        <div class="image">
            <h3><strong>@Html.DisplayFor(model => model.Name)</strong></h3>
            <br />
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Picture, 0, Model.Picture.Length)" class="img-fluid" alt="Colorlib Template">
        </div>
        <br /><br /><br />

        <div class="content">
            <p>Posted on <b>@Model.MyDate.ToString("dd MMMM yyyy, hh:mm tt")</b> by <b>@Html.DisplayFor(model => model.Posted)</b></p>
            <br />
         
            <p><b><strong>@Html.DisplayFor(model => model.ReadingTime)</strong></b></p>

            <p>@Html.DisplayFor(model => model.Description)</p>

        </div>
    </div>
</section>

